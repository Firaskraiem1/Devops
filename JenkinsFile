pipeline {
    agent {
        label 'slave_build'
    }
    stages {
        stage('Diagnostic') {
            steps {
                echo "=== Diagnostic complet ==="
                script {
                    echo "N≈ìud: ${env.NODE_NAME}"
                    echo "Workspace: ${env.WORKSPACE}"
                    echo "isUnix(): ${isUnix()}"
                    
                    // Test commandes Linux
                    sh '''
                        echo "=== Environnement Linux ==="
                        uname -a
                        pwd
                        ls -la
                        which java
                        which mvn
                        java -version
                        mvn --version || echo "Maven non install√©"
                    '''
                }
            }
        }

        stage('Checkout Code') {
            steps {
                echo "‚öôÔ∏è Clonage du repository..."
                git branch: 'main', url: 'https://github.com/Firaskraiem1/DevOps-Jenkins'
            }
        }

        stage('Build') {
            steps {
                echo "üî® Construction du livrable...."
                sh "mvn clean package -DskipTests"
            }
        }
    }
}