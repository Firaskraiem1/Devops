pipeline {
    agent {
        label 'slave_build'
    }
    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Checkout Code') {
            steps {
                echo "âš™ï¸ Clonage du repository..."
                git branch: 'main',
                    url: 'https://github.com/Firaskraiem1/DevOps-Jenkins'
            }
        }

        stage('Build') {
            steps {
                echo "ğŸ”¨ Construction du livrable...."
                script {
                    if (isUnix()) {
                        sh "mvn clean package -DskipTests"
                    } else {
                        bat "mvn clean package -DskipTests"
                    }
                }
            }
        }
    }
}